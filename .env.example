# ====================================
# CONFIGURACIÓN DEL BOT DISCORD
# ====================================

# Token del bot (OBLIGATORIO)
# Obtener en: https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here

# ID del guild principal (servidor de Informatica UAIn'T)
GUILD_ID=your_guild_id_here

# ====================================
# CONFIGURACIÓN DE DESARROLLO
# ====================================

# Entorno de ejecución (development, production, testing)
ENVIRONMENT=development

# Nivel de logging (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Prefijo de comandos (para comandos tradicionales, si los usas)
COMMAND_PREFIX=!

# ====================================
# CONFIGURACIÓN OPCIONAL
# ====================================

# ID del canal de logs de moderación
MOD_LOG_CHANNEL_ID=

# ID del canal de bienvenida
WELCOME_CHANNEL_ID=

# IDs de roles importantes (separados por comas)
ADMIN_ROLE_IDS=
MOD_ROLE_IDS=
MEMBER_ROLE_ID=

# ====================================
# BASE DE DATOS (Para fases futuras)
# ====================================

# PostgreSQL connection (comentado por ahora)
# DATABASE_URL=postgresql://user:password@localhost:5432/discord_bot
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=discord_bot
# DB_USER=bot_user
# DB_PASSWORD=your_secure_password

# ====================================
# API Y DASHBOARD (Para fases futuras)
# ====================================

# API configuration (comentado por ahora)
# API_HOST=0.0.0.0
# API_PORT=8000
# SECRET_KEY=your-very-secure-secret-key-here
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# ====================================
# SERVICIOS EXTERNOS (Para fases futuras)
# ====================================

# YouTube API (para música)
# YOUTUBE_API_KEY=

# OpenAI API (para IA/chat)
# OPENAI_API_KEY=

# Webhook URLs para notificaciones
